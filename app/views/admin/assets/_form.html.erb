<%= form_for(@asset) do |f| %>
  <% if @asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h2>

      <ul>
      <% @asset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :oid %><br>
    <%= f.text_field :oid, :placeholder => '0.00.0.00000' %>
  </div>
  <div class="field">
    <%= f.label :retrievalURL %><br>
    <%= f.text_field :retrievalURL, :type => "url" %>
  </div>
  <div class="field">
    <%= f.label :activeFrom %><br>
    <%= f.date_select :activeFrom %>
  </div>
  <div class="field">
    <%= f.label :activeTo %><br>
    <%= f.date_select :activeTo, :default => Date.new(9999, 12, 31) %>
  </div>
  <div class="field">
    <%= f.label :objectType %><br>
    <%= f.text_field :objectType, :placeholder => 'e.g. warningText, warningTone' %>
  </div>
  <div class="field">
    <%= f.label :eventType %><br>
    <%= f.text_field :eventType, :value => 'any' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "90x6" %>
  </div>
  <div class="field">
    <%= f.label :lang %><br>
    <%= f.text_field :lang, :value => 'en', :size => 2 %>
  </div>
  <div class="field">
    <%= f.label :license %><br>
    <%= f.text_field :license, :value => 'https://creativecommons.org/licenses/by-sa/4.0/', :type => "url" %>
  </div>
  <div class="field">
    <%= f.label :length %><br>
    <%= f.number_field :length, :type => 'number' %>
		<span>bytes</span>
  </div>
  <div class="field">
    <%= f.label :mimeType %><br>
    <%= f.text_field :mimeType, :placeholder => 'image/svg' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
